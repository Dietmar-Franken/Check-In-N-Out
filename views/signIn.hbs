<h1>{{title}}</h1>

<div class="row">
    <form form action="/signIn" method="post" class="col s12" id="signIn">
        <div class="row">
            <div class="input-field col s6">
                <input id="email" type="text" class="validate" name ="email">
                <label for="email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input id="password" type="password" class="validate" name="password">
                <label for="password">Password</label>
            </div>
        </div>
    </form>
    <div class="modal-footer">
        <button form="signIn" class="btn waves-effect waves-light" type="submit" name="action">Submit
        </button>
    </div>
</div>

